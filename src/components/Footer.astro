};
---

<footer class="bg-primary-50 border-t border-primary-200 mt-auto">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand and Description -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <svg 
            class="w-6 h-6 text-accent-600" 
            fill="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          <span class="text-lg font-bold text-primary-900">{SITE_CONFIG.title}</span>
        </div>
        <p class="text-primary-600 text-sm leading-relaxed max-w-md">
          {SITE_CONFIG.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-primary-900 uppercase tracking-wider">
          Quick Links
        </h3>
        <nav class="space-y-2" aria-label="Footer navigation">
          {footerLinks.map((link) => (
            <a
              href={link.href}
              class="block text-primary-600 hover:text-accent-600 text-sm transition-colors duration-200"
              {...(link.external && { 
                target: '_blank', 
                rel: 'noopener noreferrer',
                'aria-label': `${link.label} (opens in new tab)`
              })}
            >
              {link.label}
              {link.external && (
                <svg class="inline w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"/>
                  <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"/>
                </svg>
              )}
            </a>
          ))}
        </nav>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-primary-900 uppercase tracking-wider">
          Connect
        </h3>
        {socialLinks.length > 0 && (
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary-400 hover:text-accent-600 transition-colors duration-200"
                aria-label={social.label}
              >
                <span class="sr-only">{social.label}</span>
                <svg 
                  class="w-5 h-5" 
                  fill="currentColor" 
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <Fragment set:html={socialIcons[social.platform as keyof typeof socialIcons]} />
                </svg>
              </a>
            ))}
          </div>
        )}
        
        <!-- Newsletter Signup (Optional) -->
        <div class="mt-6">
          <p class="text-sm text-primary-600 mb-2">
            Stay updated with new posts
          </p>
          <form 
            class="flex flex-col sm:flex-row gap-2"
            action="#"
            method="post"
            aria-label="Newsletter signup"
          >
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              required
              class="flex-1 px-3 py-2 text-sm border border-primary-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent"
              aria-label="Email address for newsletter"
            />
            <button
              type="submit"
              class="px-4 py-2 text-sm font-medium text-white bg-accent-600 rounded-md hover:bg-accent-700 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 transition-colors duration-200"
            >
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-8 pt-8 border-t border-primary-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <!-- Copyright -->
        <div class="text-sm text-primary-500">
          <p>
            Â© {currentYear} {SITE_CONFIG.author}. All rights reserved.
          </p>
        </div>

        <!-- Additional Links -->
        <div class="flex items-center space-x-6 text-sm text-primary-500">
          <a 
            href="/privacy" 
            class="hover:text-accent-600 transition-colors duration-200"
          >
            Privacy Policy
          </a>
          <a 
            href="/terms" 
            class="hover:text-accent-600 transition-colors duration-200"
          >
            Terms of Service
          </a>
          <a 
            href="/sitemap.xml" 
            class="hover:text-accent-600 transition-colors duration-200"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Sitemap (opens in new tab)"
          >
            Sitemap
          </a>
        </div>
      </div>

      <!-- Built with info -->
      <div class="mt-4 text-center">
        <p class="text-xs text-primary-400">
          Built with 
          <a 
            href="https://astro.build" 
            target="_blank" 
            rel="noopener noreferrer"
            class="hover:text-accent-600 transition-colors duration-200"
            aria-label="Astro (opens in new tab)"
          >
            Astro
          </a>
          and 
          <a 
            href="https://tailwindcss.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="hover:text-accent-600 transition-colors duration-200"
            aria-label="Tailwind CSS (opens in new tab)"
          >
            Tailwind CSS
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling with security
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('form[aria-label="Newsletter signup"]');
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(this: HTMLFormElement, event) {
        event.preventDefault();
        
        const emailInput = this.querySelector('input[type="email"]') as HTMLInputElement;
        const submitButton = this.querySelector('button[type="submit"]') as HTMLButtonElement;
        
        if (!emailInput || !submitButton) return;
        
        const email = emailInput.value.trim();
        
        // Basic email validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          alert('Please enter a valid email address.');
          return;
        }
        
        // Disable button to prevent double submission
        submitButton.disabled = true;
        submitButton.textContent = 'Subscribing...';
        
        // Here you would typically send the email to your newsletter service
        // For now, we'll just show a success message
        setTimeout(() => {
          alert('Thank you for subscribing! You will receive a confirmation email shortly.');
          emailInput.value = '';
          submitButton.disabled = false;
          submitButton.textContent = 'Subscribe';
        }, 1000);
      });
    }
  });
</script>

<style>
  /* Footer-specific styles */
  footer {
    /* Ensure footer sticks to bottom */
    margin-top: auto;
  }
  
  /* Smooth hover transitions for social icons */
  footer a svg {
    transition: transform 0.2s ease-in-out;
  }
  
  footer a:hover svg {
    transform: scale(1.1);
  }
  
  /* Newsletter form styling */
  footer form input:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  footer form button:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    footer .grid {
      gap: 2rem;
    }
    
    footer form {
      flex-direction: column;
    }
    
    footer form input,
    footer form button {
      width: 100%;
    }
  }
</style>