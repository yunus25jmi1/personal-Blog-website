---
import type { CollectionEntry } from 'astro:content';
import OptimizedImage from './OptimizedImage.astro';
import { calculateReadingTime, formatDate, generateExcerpt } from '@/utils';

export interface Props {
  post: CollectionEntry<'blog'>;
  class?: string;
}

const { post, class: className = '' } = Astro.props;
const { title, description, publishDate, author, tags, image } = post.data;

// Calculate reading time from post content
const readingTime = calculateReadingTime(post.body);

// Generate excerpt if description is too long
const excerpt = generateExcerpt(description, 160);

// Format the publish date
const formattedDate = formatDate(publishDate);

// Generate post URL
const postUrl = `/blog/${post.slug}`;
---

<article class={`card card-hover group ${className}`}>
  <a href={postUrl} class="block p-6 h-full">
    <!-- Image if available -->
    {image && (
      <div class="mb-4 overflow-hidden rounded-lg">
        <OptimizedImage
          src={image}
          alt={`Featured image for ${title}`}
          width={400}
          height={240}
          class="transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
          sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
          quality={85}
          format="webp"
          aspectRatio="5/3"
          placeholder="blur"
          decoding="async"
          preload={false}
        />
      </div>
    )}
    
    <!-- Content -->
    <div class="flex flex-col h-full">
      <!-- Title -->
      <h2 class="text-xl font-semibold text-primary-900 mb-3 group-hover:text-accent-600 transition-colors duration-200 line-clamp-2">
        {title}
      </h2>
      
      <!-- Excerpt -->
      <p class="text-primary-600 mb-4 flex-grow leading-relaxed line-clamp-3">
        {excerpt}
      </p>
      
      <!-- Metadata -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 text-sm text-primary-500">
        <!-- Date and reading time -->
        <div class="flex items-center gap-4">
          <time datetime={publishDate.toISOString()} class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formattedDate}
          </time>
          
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {readingTime} min read
          </span>
        </div>
        
        <!-- Author -->
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {author}
        </span>
      </div>
      
      <!-- Tags -->
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-3">
          {tags.slice(0, 3).map((tag) => (
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-accent-100 text-accent-800">
              {tag}
            </span>
          ))}
          {tags.length > 3 && (
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-600">
              +{tags.length - 3} more
            </span>
          )}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  /* Line clamp utilities for text truncation */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Ensure consistent card heights in grid */
  article {
    display: flex;
    flex-direction: column;
  }
  
  article a {
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  /* Smooth hover transitions */
  .card-hover {
    transition: all 0.3s ease;
  }
  
  .card-hover:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  /* Focus styles for accessibility */
  article a:focus {
    outline: 2px solid theme('colors.accent.500');
    outline-offset: 2px;
  }
  
  /* Responsive image aspect ratio */
  .aspect-video {
    aspect-ratio: 16 / 9;
  }
</style>