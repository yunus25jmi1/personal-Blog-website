---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import OptimizedImage from '@/components/OptimizedImage.astro';
import { formatDate, calculateReadingTime } from '@/utils';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
  content?: string;
}

const { post, content = '' } = Astro.props;
const { title, description, publishDate, author, tags, image } = post.data;

// Calculate reading time from content
const readingTime = calculateReadingTime(content);

// Format publish date
const formattedDate = formatDate(publishDate);

// Create properly typed props for BaseLayout
const baseLayoutProps = {
  title,
  description,
  type: 'article' as const,
  publishDate,
  author,
  ...(image && { image })
};

// Generate structured data for the article
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": image ? new URL(image, Astro.site).href : undefined,
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Blog",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.site}logo.png`
    }
  },
  "datePublished": publishDate.toISOString(),
  "dateModified": publishDate.toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  },
  "keywords": tags.join(', ')
};
---

<BaseLayout {...baseLayoutProps}>
  <!-- Structured Data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
  
  <Header />
  
  <main id="main-content" class="flex-1">
    <article class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 max-w-4xl">
      <!-- Article Header -->
      <header class="mb-8 lg:mb-12">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="Breadcrumb" class="mb-6">
          <ol class="flex items-center space-x-2 text-sm text-primary-600">
            <li>
              <a 
                href="/" 
                class="hover:text-accent-600 transition-colors duration-200"
                aria-label="Home"
              >
                Home
              </a>
            </li>
            <li aria-hidden="true" class="text-primary-400">/</li>
            <li>
              <a 
                href="/blog" 
                class="hover:text-accent-600 transition-colors duration-200"
                aria-label="Blog"
              >
                Blog
              </a>
            </li>
            <li aria-hidden="true" class="text-primary-400">/</li>
            <li class="text-primary-900 font-medium" aria-current="page">
              {title}
            </li>
          </ol>
        </nav>

        <!-- Article Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary-900 leading-tight mb-4">
          {title}
        </h1>

        <!-- Article Description -->
        <p class="text-lg sm:text-xl text-primary-600 leading-relaxed mb-6 max-w-3xl">
          {description}
        </p>

        <!-- Article Metadata -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-primary-600 mb-6">
          <!-- Author -->
          <div class="flex items-center space-x-2">
            <svg 
              class="w-4 h-4" 
              fill="currentColor" 
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            <span>By <strong class="text-primary-900">{author}</strong></span>
          </div>

          <!-- Publish Date -->
          <div class="flex items-center space-x-2">
            <svg 
              class="w-4 h-4" 
              fill="currentColor" 
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <time datetime={publishDate.toISOString()}>
              {formattedDate}
            </time>
          </div>

          <!-- Reading Time -->
          <div class="flex items-center space-x-2">
            <svg 
              class="w-4 h-4" 
              fill="currentColor" 
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span>{readingTime} min read</span>
          </div>
        </div>

        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-accent-100 text-accent-800 hover:bg-accent-200 transition-colors duration-200">
                #{tag}
              </span>
            ))}
          </div>
        )}

        <!-- Featured Image -->
        {image && (
          <div class="mb-8 lg:mb-12">
            <OptimizedImage
              src={image}
              alt={`Featured image for ${title}`}
              width={1200}
              height={600}
              class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-lg shadow-lg"
              priority={true}
              sizes="(max-width: 768px) 100vw, (max-width: 1200px) 100vw, 1200px"
              quality={90}
              format="webp"
              preload={true}
              placeholder="blur"
              decoding="async"
            />
          </div>
        )}
      </header>

      <!-- Article Content -->
      <div class="prose prose-lg prose-primary max-w-none">
        <slot />
      </div>

      <!-- Article Footer -->
      <footer class="mt-12 pt-8 border-t border-primary-200">
        <!-- Share Buttons -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-primary-900 mb-4">Share this article</h3>
          <div class="flex flex-wrap gap-3">
            <!-- Twitter Share -->
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-200 text-sm font-medium"
              aria-label="Share on Twitter"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
              Twitter
            </a>

            <!-- LinkedIn Share -->
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-blue-700 text-white rounded-md hover:bg-blue-800 transition-colors duration-200 text-sm font-medium"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>

            <!-- Copy Link -->
            <button
              type="button"
              class="copy-link-btn inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors duration-200 text-sm font-medium"
              data-url={Astro.url.href}
              aria-label="Copy link to clipboard"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"/>
                <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z"/>
              </svg>
              Copy Link
            </button>
          </div>
        </div>

        <!-- Back to Blog -->
        <div class="text-center">
          <a
            href="/blog"
            class="inline-flex items-center px-6 py-3 bg-accent-600 text-white rounded-md hover:bg-accent-700 transition-colors duration-200 font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Blog
          </a>
        </div>
      </footer>
    </article>
  </main>

  <Footer />
</BaseLayout>

<script is:inline>
  // Copy link functionality
  document.addEventListener('DOMContentLoaded', function() {
    const copyButtons = document.querySelectorAll('.copy-link-btn');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async function(event) {
        const target = event.currentTarget;
        const url = target.getAttribute('data-url');
        if (!url) return;
        
        try {
          await navigator.clipboard.writeText(url);
          
          // Update button text temporarily
          const originalText = target.innerHTML;
          target.innerHTML = `
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Copied!
          `;
          
          setTimeout(() => {
            target.innerHTML = originalText;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy link:', err);
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = url;
          document.body.appendChild(textArea);
          textArea.select();
          try {
            const successful = document.execCommand('copy');
            if (!successful) {
              throw new Error('Copy command failed');
            }
          } catch (e) {
            console.error('Fallback copy failed:', e);
          }
          document.body.removeChild(textArea);
          
          // Update button text
          const originalText = target.innerHTML;
          target.innerHTML = `
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Copied!
          `;
          
          setTimeout(() => {
            target.innerHTML = originalText;
          }, 2000);
        }
      });
    });
  });
</script>

<style>
  /* Article-specific typography styles */
  .prose {
    @apply text-primary-800 leading-relaxed;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply text-primary-900 font-semibold leading-tight;
  }
  
  .prose h1 {
    @apply text-3xl mt-8 mb-4;
  }
  
  .prose h2 {
    @apply text-2xl mt-8 mb-4;
  }
  
  .prose h3 {
    @apply text-xl mt-6 mb-3;
  }
  
  .prose h4 {
    @apply text-lg mt-6 mb-3;
  }
  
  .prose p {
    @apply mb-4 leading-relaxed;
  }
  
  .prose a {
    @apply text-accent-600 hover:text-accent-700 underline transition-colors duration-200;
  }
  
  .prose ul,
  .prose ol {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose blockquote {
    @apply border-l-4 border-accent-200 pl-4 italic text-primary-700 my-6;
  }
  
  .prose code {
    @apply bg-primary-100 text-primary-800 px-1 py-0.5 rounded text-sm font-mono;
  }
  
  .prose pre {
    @apply bg-primary-900 text-primary-100 p-4 rounded-lg overflow-x-auto my-6;
  }
  
  .prose pre code {
    @apply bg-transparent text-inherit p-0;
  }
  
  .prose img {
    @apply rounded-lg shadow-md my-6;
  }
  
  .prose table {
    @apply w-full border-collapse my-6;
  }
  
  .prose th,
  .prose td {
    @apply border border-primary-300 px-4 py-2 text-left;
  }
  
  .prose th {
    @apply bg-primary-50 font-semibold;
  }
  
  /* Responsive typography */
  @media (max-width: 640px) {
    .prose {
      @apply text-base;
    }
    
    .prose h1 {
      @apply text-2xl;
    }
    
    .prose h2 {
      @apply text-xl;
    }
    
    .prose h3 {
      @apply text-lg;
    }
  }
  
  /* Share button hover effects */
  .copy-link-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  /* Smooth transitions for interactive elements */
  .copy-link-btn,
  .prose a {
    transition: all 0.2s ease-in-out;
  }
</style>